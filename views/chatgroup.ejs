<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Chat Group SocketIO</title>
		<script src="jquery-3.6.0.js"></script>
		<script src="socket.io/socket.io.js"></script>
		<script src="xulychatgroup.js"></script>
		<link rel="stylesheet" type="text/css" href="chatgroup.css" />
	</head>
	<body>
		<input type="text" id="txtRoom" placeholder="Enter name room" />
		<button id="btnCreateRoom">Create Room</button>
		<main class="main-rooms">
			<div class="list-rooms">
				<h3>LIST ROOMS</h3>
				<h4>CURRENT ROOM: <span id="currentRoom"></span></h4>
				<hr />
				<div class="list-name-room">
					<!-- <p>Android</p>
					<p>IOS</p> -->
				</div>
			</div>
			<div class="chat-rooms">
				<h3>CHAT ROOMS</h3>
				<hr />
				<div id="listMessage" class="list-message">
					<!-- <p class="line-message">Abc</p> -->
				</div>
				<div class="area-chat">
					<input type="text" name="message" id="txtMessage" />
					<button type="button" id="btnSend">Send</button>
				</div>
			</div>
		</main>
	</body>
</html>
